# Python-basic-projectsimport random

def guess_game():
    print("--- ЁЯОп рдирдВрдмрд░ рдУрд│рдЦрд╛ рдЧреЗрдо рдордзреНрдпреЗ рддреБрдордЪрдВ рд╕реНрд╡рд╛рдЧрдд рдЖрд╣реЗ! ---")
    print("рдореА рез рддреЗ релреж рдЪреНрдпрд╛ рдордзреНрдпреЗ рдПрдХ рдирдВрдмрд░ рдордирд╛рдд рдзрд░рд▓рд╛ рдЖрд╣реЗ. рдУрд│рдЦрд╛ рдмрдШреВ!")

    secret_number = random.randint(1, 50)
    attempts = 0

    while True:
        guess = int(input("\nрддреБрдордЪрд╛ рдЕрдВрджрд╛рдЬ рдЯрд╛рдХрд╛: "))
        attempts += 1

        if guess < secret_number:
            print("рдЦреВрдк рд▓рд╣рд╛рди! рдереЛрдбрд╛ рдореЛрдард╛ рдирдВрдмрд░ рд╕рд╛рдВрдЧрд╛.")
        elif guess > secret_number:
            print("рдЦреВрдк рдореЛрдард╛! рдереЛрдбрд╛ рд▓рд╣рд╛рди рдирдВрдмрд░ рд╕рд╛рдВрдЧрд╛.")
        else:
            print(f"ЁЯе│ рдЕрднрд┐рдирдВрджрди! рддреБрдореНрд╣реА {attempts} рдкреНрд░рдпрддреНрдирд╛рдд рдмрд░реЛрдмрд░ рдирдВрдмрд░ рдУрд│рдЦрд▓рд╛рдд!")
            break

guess_game()
